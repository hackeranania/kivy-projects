#: import Factory kivy.factory.Factory
<mypop@Popup>
	auto_dismiss : True
	title : 'about'
	size_hint: 0.6,0.6
	pos_hint : {'x':0.2 , 'top' : 0.8}
	Label:
		text : 'developed by  Anania belay & kidus gizaw  \n         by Ka organaization in 2021  \n \n \n \n \n  \n \n \n \n \n \n \n \n \n \n \n \n                     demo verion ©  '
		font_size : 20



<mygrid>
	BoxLayout:
		orientation : 'vertical'
		size : root.width , root.height
		Label:
			id : test 
			text : ''
			color:(1,1,1, 0.8)
			size_hint:(.01,.1)
			pos_hint : {'x': .5, 'top':1}
			
			
		TextInput : 
			id : calc
			text : '0'
			background_color:(0,0,0,0.5)
			foreground_color:(255,255,255, 0.8) 
			halign: 'right'
			multiline : False
			font_size : 50 
			size_hint:(1,.15)
		GridLayout:
			cols:4
			rows:5
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'√'
				on_press : root.square()	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'<<'
				on_press : root.cut()
				
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'C'
				on_press: root.clear()	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'/'
				on_press : root.result('/')	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'7'
				on_press:root.nom('7')
				background_color: (157/255,157/255,157/255,1)	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'8'
				on_press:root.nom('8')
				background_color: (157/255,157/255,157/255,1)	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'9'
				on_press:root.nom('9')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'x'
				on_press : root.result('*')	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'4'
				on_press:root.nom('4')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'5'
				on_press:root.nom('5')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'6'
				on_press:root.nom('6')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'-'
				on_press : root.result('-')	
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'1'
				on_press:root.nom('1')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'2'
				on_press:root.nom('2')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'3'
				on_press:root.nom('3')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				on_press:root.result('+')	
				text:'+'
				
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'+/-'	
				background_color: (157/255,157/255,157/255,1)
				on_press: root.checker()
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'0'
				on_press:root.nom('0')	
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'.'	
				on_press : root.result('.')
				background_color: (157/255,157/255,157/255,1)
			Button:
				size_hint:(.2,.2)
				font_size: 64
				text:'='
				on_press: root.equal() 	
				